# Enable GZIP compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache control headers for different file types
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Default cache expiration: 1 month
  ExpiresDefault "access plus 1 month"
  
  # HTML files: 1 day (to ensure users get updates regularly)
  ExpiresByType text/html "access plus 1 day"
  
  # CSS files: 1 year (versioned in production)
  ExpiresByType text/css "access plus 1 year"
  
  # JavaScript files: 1 year (versioned in production)
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"
  
  # Image files: 1 year (images rarely change)
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  
  # Font files: 1 year
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  ExpiresByType application/vnd.ms-fontobject "access plus 1 year"
  
  # Video and audio: 30 days
  ExpiresByType video/mp4 "access plus 30 days"
  ExpiresByType audio/mpeg "access plus 30 days"
</IfModule>

# Cache-Control headers with enhanced versioning support
<IfModule mod_headers.c>
  # HTML - short cache, revalidate frequently
  <FilesMatch "\.html$">
    Header set Cache-Control "public, max-age=86400, must-revalidate"
  </FilesMatch>
  
  # Versioned CSS and JavaScript - long cache (1 year)
  # Matches files like: style.v1.2.3.css, app.abc123def456.js
  <FilesMatch "\.(v[0-9]+\.[0-9]+\.[0-9]+\.)?(css|js)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # Hash-based versioned files - long cache (1 year)
  # Matches files like: style.min.abc123def456.css
  <FilesMatch "\.(min\.[a-f0-9]{6,}|[a-f0-9]{8,})\.(css|js)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # Non-versioned CSS/JS - moderate cache (30 days)
  <FilesMatch "\.(css|js)$">
    Header set Cache-Control "public, max-age=2592000"
  </FilesMatch>
  
  # Images - long cache (1 year)
  <FilesMatch "\.(jpg|jpeg|png|gif|ico|webp|svg)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # Fonts - long cache (1 year)
  <FilesMatch "\.(woff|woff2|ttf|otf|eot)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # Media files - moderate cache (30 days)
  <FilesMatch "\.(mp4|webm|mp3|wav)$">
    Header set Cache-Control "public, max-age=2592000"
  </FilesMatch>
</IfModule>

# Enable mod_rewrite for cache busting (optional)
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Remove version numbers from requests for easier cache busting
  # Example: /css/style.v1.2.3.css becomes /css/style.css
  RewriteRule "^(.+)\.v[0-9]+\.[0-9]+\.[0-9]+\.(css|js)$" "$1.$2" [L]
  
  # Hash-based versioning
  # Example: /css/style.min.abc123.css becomes /css/style.css
  RewriteRule "^(.+)\.[a-f0-9]{6,}\.(css|js)$" "$1.$2" [L]
</IfModule>
